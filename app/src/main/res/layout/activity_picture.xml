<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PictureActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/chosenImage"
            android:background="@android:color/transparent"
            android:layout_width="350dp"
            android:layout_height="300dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/imageDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/annoying_dog"
            app:layout_constraintTop_toTopOf="@+id/chosenImage"
            app:layout_constraintRight_toRightOf="@+id/chosenImage"
            app:layout_constraintLeft_toLeftOf="@+id/chosenImage"
            app:layout_constraintBottom_toBottomOf="@+id/chosenImage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You didn't put any images."
            app:layout_constraintTop_toBottomOf="@+id/imageDefault"
            app:layout_constraintRight_toRightOf="@+id/chosenImage"
            app:layout_constraintLeft_toLeftOf="@+id/chosenImage"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/general_margin"
        android:src="@drawable/ic_menu"
        android:onClick="onClickPopup"
        />

</RelativeLayout>