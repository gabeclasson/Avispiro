<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="400dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/general_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_bird_name_text"/>

        <EditText
            android:id="@+id/editName"
            style="@style/EditTextDialogueTheme"
            android:layout_height="@dimen/editTextHeight"
            android:layout_width="@dimen/editTextWidth"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_bird_description_text"
            android:paddingTop="@dimen/small_padding"/>

        <EditText
            android:id="@+id/editDesc"
            style="@style/EditTextDialogueTheme"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_bird_time_text"
            android:paddingTop="@dimen/small_padding"/>

        <EditText
            android:id="@+id/editTime"
            style="@style/EditTextDialogueTheme"
            android:layout_height="@dimen/editTextHeight"
            android:layout_width="@dimen/editTextWidth"
            android:cursorVisible="false"
            android:focusable="false"
            android:onClick="pickTimeEdit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_bird_place_text"
            android:paddingTop="@dimen/small_padding"/>

        <EditText
            android:id="@+id/editPlace"
            style="@style/EditTextDialogueTheme"
            android:layout_height="@dimen/editTextHeight"
            android:layout_width="@dimen/editTextWidth"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_bird_category_text"
            android:paddingTop="@dimen/small_padding" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editCategories"
                style="@style/EditTextDialogueTheme"
                android:layout_height="@dimen/editTextHeight"
                android:layout_width="@dimen/editTextWidth"
                android:cursorVisible="false"
                android:focusable="false" />

            <Spinner
                android:id="@+id/spinnerCategories"
                android:layout_width="@dimen/editTextWidth"
                android:layout_height="@dimen/editTextHeight" />
        </FrameLayout>

    </LinearLayout>

</ScrollView>